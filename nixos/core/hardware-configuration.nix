    device = "/dev/disk/by-uuid/6b1eb267-f3ca-4fab-bba0-21ab6490279c";
    fsType = "btrfs";
    options = [ "subvol=nix" ];
  };

  fileSystems."/boot" = {
    device = "/dev/disk/by-uuid/61656aac-1411-467a-9aa0-60aadaad14cf";
    fsType = "ext4";
  };

  fileSystems."/boot/efi" = {
    device = "/dev/disk/by-uuid/D20A-52D8";
    fsType = "vfat";
    options = [
      "fmask=0022"
      "dmask=0022"
    ];
  };

  swapDevices = [
    { device = "/dev/disk/by-uuid/52d35394-b4e2-4b6c-8dee-c231388a50f5"; }
