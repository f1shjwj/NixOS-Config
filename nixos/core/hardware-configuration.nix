    extraModulePackages = [ ];
    kernelModules = [
      "kvm-amd"
      "i2c-dev"
    ];
    initrd = {
      kernelModules = [ ];
      availableKernelModules = [
        "nvme"
        "xhci_pci"
        "thunderbolt"
      ];
    };
  };

  services.udev.extraRules = ''
    KERNEL=="i2c-[0-9]*", GROUP="i2c", MODE="0660"
  '';

